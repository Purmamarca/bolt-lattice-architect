{
  "name": "bolt-lattice-architect",
  "version": "1.0.0",
  "description": "Quantum-Safe AI Agent Architect",
  "scripts": {
    "build": "tsc",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --runInBand",
    "test:adversarial": "ts-node --transpile-only tests/adversarial_test.ts",
    "test:stress": "ts-node --transpile-only tests/stress_test.ts",
    "test:quick": "ts-node --transpile-only tests/quick_test.ts",
    "test:reliability": "python3 scripts/verify.py",
    "typecheck": "tsc --noEmit",
    "orchestrate": "ts-node examples/full_orchestration.ts full",
    "orchestrate:continuous": "ts-node examples/full_orchestration.ts continuous",
    "orchestrate:webhook": "ts-node examples/full_orchestration.ts webhook"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "rootDir": ".",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"],
    "testMatch": [
      "**/tests/unit/**/*.test.ts",
      "**/tests/integration/**/*.test.ts"
    ],
    "moduleNameMapper": {
      "^@security/(.*)$": "<rootDir>/src/security/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/components/**",
      "!src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "keywords": [
    "ai",
    "agent",
    "lattice",
    "quantum-safe",
    "tdd"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.32",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "lucide-react": "^0.563.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  }
}
